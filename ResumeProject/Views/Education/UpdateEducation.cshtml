@model ResumeProject.Entities.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="min-h-screen bg-gray-900 p-6">
    <div class="max-w-3xl mx-auto">

        <h3 class="mb-6 text-2xl font-bold text-white">Profil Güncelle</h3>

        <form method="post" class="space-y-6">

            <input type="hidden" asp-for="AboutId" />

            <!-- Profil Resim URL -->
            <div class="bg-gray-800 rounded-2xl p-6 shadow-lg">
                <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-300 mb-2">Profil Resim URL</label>
                <input asp-for="ImageUrl"
                       placeholder="https://example.com/profil.jpg"
                       class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-white placeholder-gray-500"
                       value="@Model.ImageUrl" />
                <span class="text-gray-400 text-sm">Boş bırakılırsa varsayılan resim gösterilecektir.</span>
            </div>

            <!-- Ad Soyad -->
            <div class="bg-gray-800 rounded-2xl p-6 shadow-lg">
                <label asp-for="NameSurname" class="block text-sm font-medium text-gray-300 mb-2">Ad Soyad</label>
                <input asp-for="NameSurname"
                       class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-white placeholder-gray-500"
                       placeholder="Adınız Soyadınız"
                       value="@Model.NameSurname" />
            </div>

            <!-- Hakkımda -->
            <div class="bg-gray-800 rounded-2xl p-6 shadow-lg">
                <label asp-for="Description" class="block text-sm font-medium text-gray-300 mb-2">Hakkımda</label>
                <textarea asp-for="Description"
                          rows="6"
                          class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-white placeholder-gray-500"
                          placeholder="Kendiniz hakkında yazın...">@Model.Description</textarea>
            </div>

            <!-- Butonlar -->
            <div class="flex gap-4">
                <a href="/AboutMe/AboutMe"
                   class="flex-1 text-center py-3 rounded-xl bg-gray-700 text-gray-300 hover:bg-gray-600 hover:text-white transition-all">
                    Geri Dön
                </a>
                <button type="submit"
                        class="flex-1 py-3 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 transition-all">
                    Güncelle
                </button>
            </div>

        </form>
    </div>
</div>
