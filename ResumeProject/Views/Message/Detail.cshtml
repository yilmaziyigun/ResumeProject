@model ResumeProject.Entities.Message
@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-8">

    <!-- Header -->
    <div class="max-w-5xl mx-auto mb-6">
        <div class="flex items-center justify-between">

            <div class="flex items-center gap-4">
                <a asp-action="MessageList"
                   class="flex items-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-700
                          text-slate-200 rounded-lg transition border border-slate-700">
                    ← Geri Dön
                </a>
                <h1 class="text-2xl font-bold text-white">Mesaj Detayı</h1>
            </div>

            <span class="px-4 py-2 bg-blue-500/20 text-blue-400
                         rounded-lg text-sm font-medium border border-blue-500/30">
                @ViewBag.UnreadCount Okunmadı
            </span>
        </div>
    </div>

    <!-- Card -->
    <div class="max-w-5xl mx-auto bg-slate-800/50 backdrop-blur
                rounded-2xl border border-slate-700/50 shadow-2xl overflow-hidden">

        <!-- Card Header -->
        <div class="bg-gradient-to-r from-slate-800 to-slate-700
                    p-8 border-b border-slate-700/50">

            <div class="flex items-start justify-between mb-6">
                <div>
                    <h2 class="text-3xl font-bold text-white mb-4">
                        @Model.Subject
                    </h2>

                    <div class="flex flex-wrap items-center gap-6 text-slate-300">
                        <span>👤 @Model.NameSurname</span>
                        <span>✉️ @Model.Email</span>
                        <span>📅 @Model.SendDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>

                <span class="px-4 py-2 rounded-lg text-sm font-medium
                    @(Model.IsRead
                                            ? "bg-gray-600 text-gray-200"
                                            : "bg-blue-600 text-white")">
                    @(Model.IsRead ? "Okundu" : "Yeni")
                </span>
            </div>

            <!-- Actions -->
            <div class="flex gap-3">
                <a href="mailto:@Model.Email"
                   class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700
                          text-white rounded-lg shadow">
                    Yanıtla
                </a>

                <a asp-action="Delete" asp-route-id="@Model.MessageId"
                   onclick="return confirm('Mesaj silinsin mi?')"
                   class="px-5 py-2.5 bg-red-600/20 hover:bg-red-600/30
                          text-red-400 rounded-lg border border-red-500/30">
                    Sil
                </a>
                <a asp-action="OkunmadıYap" asp-route-id="@Model.MessageId"
                   class="px-5 py-2.5 bg-green-600/20 hover:bg-green-600/30
          text-green-400 rounded-lg border border-green-500/30">
                    Okunmadı Yap
                </a>
                
            </div>
        </div>

        <!-- Content -->
        <div class="p-8">
            <div class="bg-slate-900/50 rounded-xl p-8
                        border border-slate-700/30 text-slate-300 leading-relaxed text-lg">
                @Model.MessageDetail
            </div>

            <!-- Meta -->
            
            </div>
        </div>
    </div>
</div>
