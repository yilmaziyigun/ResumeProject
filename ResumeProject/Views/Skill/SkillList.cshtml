@model List<ResumeProject.Entities.Skill>
@{
    ViewData["Title"] = "Yetenekler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="p-6 bg-slate-900 min-h-screen text-white">
    <div class="max-w-5xl mx-auto">

        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Yetenekler</h1>
            <a href="/Skill/CreateSkill"
               class="bg-indigo-600 hover:bg-indigo-700 px-5 py-2 rounded-lg">
                + Yeni Yetenek
            </a>
        </div>

        <div class="bg-slate-800 rounded-xl overflow-hidden">
            <table class="w-full">
                <thead class="bg-slate-700 text-slate-300">
                    <tr>
                        <th class="p-4 text-left">Yetenek</th>
                        <th class="p-4">Oran</th>
                        <th class="p-4">İşlem</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-b border-slate-700">
                            <td class="p-4 font-medium">@item.Title</td>

                            <td class="p-4">
                                <div class="w-full bg-slate-700 rounded-full h-2">
                                    <div class="h-2 rounded-full bg-indigo-500"
                                         style="width:@item.Percent%"></div>
                                </div>
                                <span class="text-sm text-slate-400">@item.Percent%</span>
                            </td>

                            <td class="p-4 flex gap-2">
                                <a href="/Skill/UpdateSkill/@item.SkillId"
                                   class="px-3 py-1 bg-blue-600 rounded">Edit</a>
                                <a href="/Skill/DeleteSkill/@item.SkillId"
                                   onclick="return confirm('Silinsin mi?')"
                                   class="px-3 py-1 bg-red-600 rounded">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
