@model List<ResumeProject.Entities.Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mb-4 text-white">Portfolio List</h3>

<div class="card bg-dark text-white shadow-lg">
    <div class="card-body">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Durum</th>
                    <th class="text-center">Sil</th>
                    <th class="text-center">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PortfolioId</td>

                        <td class="fw-semibold">
                            @item.PortfolioTitle
                        </td>

                        <td>
                            @if (item.status)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>

                        <td class="text-center">
                            <a href="/Portfolio/DeletePortfolio/@item.PortfolioId"
                               class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                Sil
                            </a>
                        </td>

                        <td class="text-center">
                            <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId"
                               class="btn btn-sm btn-outline-warning">
                                Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a href="/Portfolio/CreatePortfolio/" class="btn btn-success">
                + Yeni Proje Girişi
            </a>
        </div>
    </div>
</div>