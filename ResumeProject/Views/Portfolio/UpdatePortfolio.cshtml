@model ResumeProject.Entities.Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mb-4 text-white">Proje Güncelle</h3>

<div class="card bg-dark text-white shadow-lg">
    <div class="card-body">

        <form method="post">

            <input type="hidden" asp-for="PortfolioId" />

            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <input type="text"
                       asp-for="PortfolioTitle"
                       class="form-control bg-secondary text-white border-0"
                       placeholder="Proje başlığı" />
            </div>

            <div class="mb-3">
                <label class="form-label">Görsel URL</label>
                <input type="text"
                       asp-for="ImageUrl"
                       class="form-control bg-secondary text-white border-0"
                       placeholder="https://..." />
            </div>

            <div class="mb-4">
                <label class="form-label">Durum</label>
                <select asp-for="status" class="form-select bg-secondary text-white border-0">
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Portfolio/Index" class="btn btn-outline-light">
                    Geri Dön
                </a>

                <button type="submit" class="btn btn-warning px-4">
                    Projeyi Güncelle
                </button>
            </div>

        </form>

    </div>
</div>
