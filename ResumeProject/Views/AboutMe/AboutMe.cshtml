@* Views/About/AboutList.cshtml *@
@model List<ResumeProject.Entities.About>
@{
    ViewData["Title"] = "Hakkımda Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 p-6">
    <div class="max-w-7xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-slate-800">Hakkımda Yönetimi</h1>
                    <p class="text-slate-500 mt-1">Profil bilgilerinizi yönetin</p>
                </div>
                <a href="@Url.Action("CreateAbout")" class="flex items-center gap-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all shadow-lg shadow-blue-500/30">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Yeni Ekle
                </a>
            </div>
        </div>

        <!-- Liste -->
        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var about in Model)
                {
                    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-lg transition-shadow">
                        <!-- Resim -->
                        <div class="aspect-video bg-gradient-to-br from-blue-50 to-indigo-100 overflow-hidden">
                            @if (!string.IsNullOrEmpty(about.ImageUrl))
                            {
                                <img src="@about.ImageUrl" alt="@about.NameSurname" class="w-full h-full object-cover">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center text-slate-400">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                </div>
                            }
                        </div>

                        <!-- İçerik -->
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-slate-800 mb-3">@about.NameSurname</h3>
                            <p class="text-slate-600 text-sm line-clamp-3 mb-4">@about.Description</p>

                            <!-- Butonlar -->
                            <div class="flex gap-2">
                                <a href="@Url.Action("UpdateAbout", new { id = about.AboutId })" class="flex-1 flex items-center justify-center gap-2 bg-blue-50 text-blue-600 px-4 py-2.5 rounded-lg hover:bg-blue-100 transition-colors font-medium">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Düzenle
                                </a>
                                <a href="@Url.Action("DeleteAbout", new { id = about.AboutId })"
                                   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?')"
                                   class="flex items-center justify-center bg-red-50 text-red-600 px-4 py-2.5 rounded-lg hover:bg-red-100 transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-12 text-center">
                <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-slate-400">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-slate-600 mb-2">Henüz kayıt yok</h3>
                <p class="text-slate-500 mb-6">Hemen ilk profilinizi oluşturun</p>
                <a href="@Url.Action("CreateAbout")" class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Yeni Ekle
                </a>
            </div>
        }

    </div>
</div>


                <div className="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-6xl mx-auto">
                    {stats.map((stat) => (
                    <div key={stat.id} className="text-center">
                        <div className="text-4xl mb-2">{stat.icon}</div>
                        <div className="text-3xl font-bold text-slate-800 mb-1">{stat.value}</div>
                        <div className="text-sm text-slate-600">{stat.label}</div>
                    </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</div>
  );
}