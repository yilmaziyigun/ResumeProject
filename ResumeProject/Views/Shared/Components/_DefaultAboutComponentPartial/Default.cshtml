@using ResumeProject.Entities
@model About

	<!-- section about -->
<section id="about">

	<div class="container">

		<!-- section title -->
		<h2 class="section-title wow fadeInUp">Hakkımda</h2>

		<div class="spacer" data-height="60"></div>

		<div class="row">

			<div class="col-md-3">
				<div class="text-center text-md-left">
					<!-- avatar image -->
					<img src="@Model.ImageUrl" style="width: 300px; height: 300px; object-fit: cover; border-radius: 15px alt="@Model.NameSurname" />
				</div>
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
			</div>
			
			<div class="col-md-9 triangle-left-md triangle-top-sm">
				<div class="rounded bg-white shadow-dark padding-30">
					<div class="row">
						<div class="col-md-6">
							<!-- about text -->
							<p>@Model.Description</p>
							<div class="mt-3">
								<a href="/uploads/profile/cv/cv.pdf"
								   class="btn btn-default"
								   target="_blank">
									CV görüntüle (.pdf)
								</a>

							</div>
							<div class="spacer d-md-none d-lg-none" data-height="30"></div>
						</div>
						<div class="col-md-6">
							<!-- skill item -->
							@if (Model.Skills != null && Model.Skills.Any())
							{
								foreach (var skill in Model.Skills)
								{
									<div class="skill-item">
										<div class="skill-info clearfix">
											<h4 class="float-left mb-3 mt-0">@skill.Title</h4>
											<span class="float-right">@skill.Percent%</span>
										</div>
										<div class="progress">
											<div class="progress-bar data-background"
												 role="progressbar"
												 aria-valuemin="0"
												 aria-valuemax="100"
												 aria-valuenow="@skill.Percent">
											</div>
										</div>
										<div class="spacer" data-height="20"></div>
									</div>
								}
							}
							else
							{
								<p>Henüz skill eklenmedi.</p>
							}


						</div>
					</div>
				</div>
			</div>

		</div>
		<!-- row end -->

		<div class="spacer" data-height="70"></div>

		<div class="row">

			<div class="col-md-3 col-sm-6">
				<!-- fact item -->
				<div class="fact-item">
					<span class="icon icon-fire"></span>
					<div class="details">
						<h3 class="mb-0 mt-0 number">
							<em class="count">@ViewBag.PortfolioCount</em>
						</h3>
						<p class="mb-0">Tamamlanan Proje</p>
					</div>
				</div>
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
			</div>

			<div class="col-md-3 col-sm-6">
				<!-- fact item -->
				<div class="fact-item">
					<span class="icon icon-cup"></span>
					<div class="details">
						<h3 class="mb-0 mt-0 number">
							<em class="count">@ViewBag.CoffeeCount</em>
						</h3>
						<p class="mb-0">Tüketilen Kahve</p>
					</div>
				</div>
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
			</div>

			<div class="col-md-3 col-sm-6">
				<!-- fact item -->
				<div class="fact-item">
					<span class="icon icon-people"></span>
					<div class="details">
						<h3 class="mb-0 mt-0 number"><em class="count">@ViewBag.EkipArk </em></h3>
						<p class="mb-0">Çalışılan Ekip Arkadaşı</p>
					</div>
				</div>
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
			</div>

			<div class="col-md-3 col-sm-6">
				<!-- fact item -->
				<div class="fact-item">
					<span class="icon icon-badge"></span>
					<div class="details">
						<h3 class="mb-0 mt-0 number">
							<em class="count">@ViewBag.SkillsCount</em>
						</h3>
						<p class="mb-0">Edinilen Beceri</p>
					</div>
				</div>
			</div>

		</div>

	</div>

</section>

